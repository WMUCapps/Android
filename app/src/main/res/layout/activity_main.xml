<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/black"
    android:id="@+id/root">

    <ImageButton
        android:src="@drawable/play1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/Play"
        android:background="@null"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="50dp" />

    <ImageButton
        android:src="@drawable/digitalicon2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DIG"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="250dp"
        android:scaleType="fitCenter"
        android:longClickable="true"
        android:background="@null"
        android:paddingTop="60dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/Play"
        android:layout_toStartOf="@+id/Play"
        android:paddingBottom="50dp" />

    <ImageButton
        android:src="@drawable/fmicon2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FM"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="250dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/Play"
        android:layout_toEndOf="@+id/Play" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wmuc"
        android:src="@drawable/wmuc"
        android:adjustViewBounds="true"
        android:maxWidth="120dp"
        android:maxHeight="80dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Play"
        android:layout_alignRight="@+id/Play"
        android:layout_alignEnd="@+id/Play"
        android:layout_alignBottom="@+id/Play"
        android:layout_alignLeft="@+id/Play"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:paddingBottom="53dp"></ProgressBar>


</RelativeLayout>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>