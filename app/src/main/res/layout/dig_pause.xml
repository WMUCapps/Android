<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:background="@color/primary_material_dark"
    android:id="@+id/custom_id"
    >
    <ImageView
        android:id="@+id/img"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/wmuc"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Play "
        android:id="@+id/playnotif"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  FM  "
        android:id="@+id/fmnotif"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toRightOf="@+id/playnotif"
        android:layout_centerVertical="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital"
        android:id="@+id/dignotif"
        android:layout_toRightOf="@+id/fmnotif"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/fmnotif"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/infotext"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:text="Now Playing: Digital"
        android:visibility="visible"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true" />
</RelativeLayout>