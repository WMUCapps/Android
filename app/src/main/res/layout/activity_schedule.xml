<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="appinventor.ai_bengg.Android_Radio.Android_Radio.Android_Radio.Schedule">

    <TextView
        android:id="@+id/wmuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Schedule"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!--<fragment-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--class="appinventor.ai_bengg.WMUC_Radio.ScheduleFragment"-->
    <!--android:id="@+id/sched_fragment"-->
    <!--tools:layout="@layout/schedule_fragment"-->
    <!--android:layout_below="@+id/wmucsched"-->
    <!--android:layout_centerHorizontal="true" />-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="70dp"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">





        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp">

            <ListView
                android:id="@+id/list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>

    </TableLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="  S   "
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:textStyle="normal|bold"/>

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="   M   "
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="   T   "
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="   W   "
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="   Th   "
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="   F   "
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="   S    "
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

        </TableRow>



    <TextView
        android:id="@+id/fmToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:text="FM"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:paddingTop="8dp"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/wmuc"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/digToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:text="Dig"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:paddingTop="8dp"
        android:layout_below="@+id/wmuc"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="8dp"
        android:text="Day"
        android:textColor="@android:color/holo_red_light"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/wmuc"
        android:layout_centerHorizontal="true" />

</RelativeLayout>